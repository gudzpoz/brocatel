{
  "name": "vscode-brocatel",
  "displayName": "Brocatel Dev Tools",
  "description": "Run and test Brocatel stories in VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0",
    "node": ">=16"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-brocatel.preview",
        "title": "Brocatel: Preview Story"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Brocatel Dev Tools",
      "properties": {
        "brocatel.lintAllMarkdownFiles": {
          "scope": "resource",
          "type": "boolean",
          "default": false,
          "description": "Whether to lint all markdown files in the workspace."
        },
        "brocatel.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "configurationDefaults": {
      "[markdown]": {
        "editor.quickSuggestions": {
          "other": "on"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "pnpm run compile-web",
    "vscode:prepublish": "pnpm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "dependencies": {
    "@brocatel/mdc": "workspace:^",
    "@brocatel/mdls": "workspace:^",
    "@brocatel/mdui": "workspace:^",
    "remark-html": "^15.0.2",
    "remark-parse": "^10.0.2",
    "unified": "^10.1.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.88.0",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vscode/test-web": "^0.0.53",
    "assert": "^2.1.0",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.4",
    "vfile": "^5.3.7",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
