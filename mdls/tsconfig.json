{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "ES2020",
      "WebWorker"
    ],

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src", "test"],
  "extends": "./tsconfig.node.json",
}
